{
    "version": "2.0.0",
    "presentation": {
      "echo": false,
      "reveal": "always",
      "focus": false,
      "panel": "dedicated",
      "showReuseMessage": true
    },
    "tasks": [
      {
        "label": "serve all",
        "dependsOn": [
          "Server",
          "Frontend"
        ],
        // Mark as the default build task so cmd/ctrl+shift+b will create them
        "group": {
          "kind": "build",
          "isDefault": true
        },
        // Try start the task on folder open
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
        // The name that shows up in terminal tab
        "label": "Server",
        // The task will launch a shell
        "type": "shell",
        "command": "php -S localhost:8080 -t server/",
        "isBackground": true,
        "problemMatcher": [],
        // Create the tasks in a terminal group
        "presentation": {
          "group": "wedding-page"
        }
      },
      {
        "label": "Frontend",
        "type": "shell",
        "command": "cd webpage; npm start",
        "isBackground": true,
        "problemMatcher": [],
        "presentation": {
          "group": "wedding-page"
        }
      }
    ]
  }